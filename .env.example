# =============================================================================
# Krator Trading System - Environment Configuration
# =============================================================================

# Database Configuration
DATABASE_URL=postgresql://krator_user:krator_pass@localhost:5432/krator_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_ACCEPT_CONTENT=json
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json

# Trading Configuration
INITIAL_CAPITAL=100000.0
MAX_PORTFOLIO_RISK=0.02
MAX_DAILY_DRAWDOWN=0.05
RISK_FREE_RATE=0.02

# Alpaca Trading API
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_MENTION_USERS=
SLACK_CHANNEL=#trading-alerts

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_ROTATION=100 MB
LOG_RETENTION=30 days

# System Configuration
ENVIRONMENT=development
DEBUG=false
TEST_MODE=false

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=30
HEARTBEAT_INTERVAL=3600
METRICS_PORT=9090

# AI-Assisted RCA (Optional)
AI_ASSIST_ENABLED=false
AI_ASSIST_PROVIDER=none
AI_ASSIST_API_KEY=
AI_ASSIST_TIMEOUT_SECS=2
AI_ASSIST_CACHE_TTL_SECS=600
AI_ASSIST_MODEL=gpt-4o-mini

# Security
SECRET_KEY=change_this_in_production_to_a_secure_random_key
ENCRYPTION_KEY=your_32_byte_encryption_key_base64_encoded

# Performance Tuning
MAX_CONCURRENT_ORDERS=10
ORDER_TIMEOUT_SECONDS=30
MARKET_DATA_BUFFER_SIZE=10000
STREAM_RECONNECT_ATTEMPTS=5
STREAM_RECONNECT_DELAY=5

# Backtesting
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2024-01-01
BACKTEST_INITIAL_CAPITAL=100000
BACKTEST_COMMISSION=0.001